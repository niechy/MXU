{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mxu",
  "version": "0.1.0",
  "identifier": "com.misteo.mxu",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "mxu",
        "width": 1000,
        "height": 618,
        "minWidth": 850,
        "minHeight": 525,
        "decorations": true,
        "shadow": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": ["icons/icon.png", "icons/icon.ico"]
  }
}
